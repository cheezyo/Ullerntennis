<div id="edit_field">
<%= form_for @article do |f| %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

 	<%= f.hidden_field :author, :value => current_user.fname.capitalize + " " + current_user.lname.capitalize %>
	<!--<%= f.collection_select(:author, User.all, :fname, :fname) %>-->
  
  <p>
    <%= f.label :ingress %><br />
    <%= f.text_area :ingress, :rows => 8, :cols=> 65 %>
  </p>
  <p>
    <%= f.label :picture %><br />
    <%= f.text_field :picture %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => "tinymce", :rows => 30, :cols => 100%>
        <%= tinymce %>
  </p>
  
	<a href="javascript:void(0)" onclick="showHideAblums('hide_show_albums')" >Legg til et ablum?</a>
<p id="hide_show_albums" style="visibility: hidden;">
   	<% if Album.find(:all).size > 0 %>
  	<% Album.find(:all).each do |a| %>
  	<%= f.radio_button :album_id, a.id %>
  	<%= label_tag a.title %>
  	<% end %>
  	<%= f.radio_button :album_id, nil %>
  	<%= label_tag "Ingen" %>
  	<% end %>
  </p>
  
  <p><%= f.submit %></p>
<% end %>
</div>
