<%= form_for @user do |f| %>

  <p>
    <%= f.label :fname %><br />
    <%= f.text_field :fname %>
  </p>
  <p>
    <%= f.label :lname %><br />
    <%= f.text_field :lname %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </p> 
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
   <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
  	<%= f.check_box :admin%>
  	<%= f.label :admin %>
  </p>
  <p>
  	<%= f.check_box :editor%>
  	<%= f.label :editor %>
  </p>
	  
  <p><%= f.submit %></p>
<% end %>
