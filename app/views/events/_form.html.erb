<%= form_for @event do |f| %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label 'Start' %><br />
    <%= f.date_select :dateofevent %>
  </p>
  <p>
    <%= f.label 'Slutt' %><br />
    <%= f.date_select :endofevent %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit %></p>
<% end %>
